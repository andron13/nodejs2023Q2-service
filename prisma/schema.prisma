generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrismaUser {
  id        String   @id @default(uuid())
  login     String
  password  String
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Track {
  id       String  @id @default(uuid())
  name     String
  duration Int
  artistId String?
  albumId  String?
  favorite Boolean @default(false)
}

model Artist {
  id       String  @id @default(uuid())
  name     String
  grammy   Boolean
  favorite Boolean @default(false)
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  artistId String?
  favorite Boolean @default(false)
}
